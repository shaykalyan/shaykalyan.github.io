---
eleventyExcludeFromCollections: true
pagination:
  data: collections
  size: 1
  alias: tag
  filter: 
    - all
    - tagList
layout: layouts/base.njk
renderData:
  title: Tagged "{{ tag }}"
permalink: /tags/{{ tag }}/
---
<div class="container">
    <div class="row">
        <div class="col">
            <h1>
            Tagged  
            <span class="post-metadata-tag">
                    <a href="/blog/tags/{{tag}}" class="link-alternate">
                        {{ tag }}
                    </a>
                </span>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col">
            {% set posts = collections[tag] %}
            {% include "components/posts-list.njk" %}
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>See  <a href="{{ '/tags/' | url }}">all tags</a>.</p>
        </div>
    </div>
</div>